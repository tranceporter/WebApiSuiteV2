@model WebAPISuite.Models.ApplicationUser
@{
    ViewBag.Title = "Details";
}
<h2>Details</h2>
<div class="row">
    <div class="col-md-12">
        <h4>User</h4>
        <hr />
        <div class="row">
            <div class="col-md-2">
                <span>Email</span>
            </div>
            <div class="col-md-10">
                <span>@Model.Email</span>
            </div>
        </div>
        <div class="row">
            <div class="col-md-2">
                <span>Phone</span>
            </div>
            <div class="col-md-10">
                <span>@Model.PhoneNumber</span>
            </div>
        </div>
        <div class="row">
            <div class="col-md-2">
                <span>Address</span>
            </div>
            <div class="col-md-10">
                <span>@Model.DisplayAddress</span>
            </div>
        </div>
    </div>
</div>
<br/>
<div class="row">
    <div class="col-md-12">
        <h4>List of roles for this user</h4>
        <hr />
        @if (ViewBag.RoleNames.Count == 0)
        {
            <p>No roles found for this user.</p>
        }
        else
        {
            foreach (var item in ViewBag.RoleNames)
            {
                <p>@item</p>
            }
        }

    </div>
</div>

<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>



